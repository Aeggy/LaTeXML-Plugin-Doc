\def\Randmark#1{\vadjust{\vbox to 0pt
               {\vss\hbox to \hsize{\hskip\hsize\string#1\hss}
                 \vskip 3.5pt}}}


\def\empty{}
\def\Num#1{\global\advance\nummer by1{\the\kapno.\the\parno.\the\nummer}
           \def\test{#1}
           {\ifx\test\empty
              \ifmmode\else\kern-.25em\fi
            \else
             \ifdraft\Randmark#1\fi
              \ifmmode\else\kern-.9em\fi
              \immediate\write\makrono
              {\def\noexpand#1{\the\kapno.\the\parno.\the\nummer}}
              \xdef#1{\the\kapno.\the\parno.\the\nummer}
            \fi}}

\def\Parnum#1{\global\advance\parno by1{\the\kapno.\the\parno}\global\nummer=0
           \def\test{#1}
           {\ifx\test\empty
              \ifmmode\else\kern-.25em\fi
            \else
%              \ifdraft\Randmark#1\fi
              \ifmmode\else\kern-.9em\fi
              \immediate\write\makrono
              {\def\noexpand#1{\the\kapno.\the\parno}}
              \xdef#1{\the\kapno.\the\parno.\the\nummer}
            \fi}}
\def\Kapnum#1{\global\advance\kapno by1{\the\kapno}\global\nummer=0\global\parno=0
           \def\test{#1}
           {\ifx\test\empty
              \ifmmode\else\kern-.25em\fi
            \else
              \ifdraft\Randmark{#1}\fi
              \ifmmode\else\kern-.9em\fi
              \immediate\write\makrono
              {\def\noexpand#1{\the\kapno}}
              \xdef#1{\the\kapno}
            \fi}}

\def\Kap#1#2{{\bigbreak\centerline{\ganzgross\Kapnum{#2}\quad #1}
              \nobreak\bigskip\nobreak
           \edef\WriteInhalt{
                   \write\inhaltno{\string\smallskip\number\kapno. 
                                   #1\string\dotfill
                                   \noexpand\folio}}
           \WriteInhalt}}

      
\def\Para#1#2{{\bigbreak     {\gross\Parnum{#2}\quad #1}
               \nobreak\medskip\nobreak
           \edef\WriteInhalt{
                   \write\inhaltno{{\string\par\string\quad
                                    \number\kapno.\number\parno} 
                                   #1\string\dotfill
                                   \noexpand\folio}}
           \WriteInhalt}}

